<%- include('../partials/header.ejs') %>

<form action="/catspotting/<%= post._id %>?_method=PUT" method="POST">
    <fieldset>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= post.title %>" required>
    </fieldset>
    <fieldset>
        <label for="location">Location</label>
        <input type="text" name="location" value="<%= post.location %>" required>
    </fieldset>
    <fieldset>
        <label for="description">Description</label>
        <input type="textarea" name="description" value="<%= post.description %>">
    </fieldset>
    <fieldset>
        <label for="img">IMG source</label>
        <input type="text" name="img" value="<%= post.img %>" required>
    </fieldset>
    <button type="submit">Edit Post</button>
</form>

<a class="go-back" href="/catspotting/<%= post._id %>">Go Back</a>

<%- include('../partials/footer.ejs') %>
